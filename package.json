{
  "name": "roo-ui",
  "repository": "git@github.com:hooroo/roo-ui.git",
  "author": "Hooroo <support@hooroo.com>",
  "license": "MIT",
  "main": "lib/",
  "module": "esm/",
  "files": [
    "!**/icons/**/",
    "lib/",
    "esm/",
    "assets/",
    "components/",
    "fonts/",
    "icons/",
    "logos/",
    "!**/icons/**/",
    "!*.test.*",
    "!*.story.*"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "build:icons": "scripts/build-icons",
    "build:entrypoints": "scripts/build-entrypoints",
    "build:cjs": "MODULES=commonjs babel src -d lib --copy-files",
    "build:esm": "MODULES=false babel src -d esm --copy-files",
    "build": "npm-run-all build:icons --parallel build:cjs build:esm build:entrypoints",
    "postinstall": "yarn build:icons",
    "pretest": "yarn build:icons",
    "release": "semantic-release",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "generate:component": "hygen component new --path",
    "generate:entrypoint": "HYGEN_OVERWRITE=1 hygen entrypoint new --name"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ],
    "modulePathIgnorePatterns": [
      "lib/",
      "esm/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@emotion/core": "^10.0.10",
    "@emotion/styled": "^10.0.10",
    "@storybook/addon-knobs": "^5.1.10",
    "@storybook/addon-options": "^5.1.10",
    "@storybook/addons": "^5.1.10",
    "@storybook/react": "^5.1.10",
    "@storybook/storybook-deployer": "^2.8.1",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.0.6",
    "babel-plugin-emotion": "^10.0.15",
    "babel-plugin-module-resolver": "^3.2.0",
    "date-fns": "^1.30.1",
    "dayzed": "^2.2.0",
    "emotion-theming": "^10.0.10",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "eslint": "^6.1.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-sonarjs": "^0.4.0",
    "husky": "^3.0.2",
    "hygen": "^4.0.8",
    "is-var-name": "^2.0.0",
    "jest": "^24.8.0",
    "jest-axe": "^3.1.1",
    "jest-emotion": "^10.0.14",
    "lint-staged": "^9.2.1",
    "lodash": "^4.17.4",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "polished": "^2.2.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.6.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-modal": "^3.9.1",
    "react-onclickoutside": "^6.8.0",
    "react-popper": "^1.3.3",
    "react-powerplug": "^1.0.0",
    "react-text-mask": "^5.4.3",
    "semantic-release": "16.0.0-beta.22",
    "source-map-loader": "^0.2.4",
    "storybook-readme": "^5.0.6",
    "styled-system": "^4.1.0",
    "svgi": "^1.1.0"
  },
  "peerDependencies": {
    "date-fns": "^1.30.1",
    "dayzed": "^2.2.0",
    "react-modal": "^3.9.1",
    "react-onclickoutside": "^6.8.0",
    "react-popper": "^1.3.3",
    "react-powerplug": "^1.0.0",
    "react-text-mask": "^5.4.3"
  }
}
